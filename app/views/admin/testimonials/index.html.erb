<%= render "admin/shared/message" %>
<div class="row">
  <div class="col-md-12">
    <div class="col-md-6">
      <h2>Testimonials</h2>
    </div>
    <div class="col-md-6">
      <div class="model_buttons">
        <%= link_to "Add New", new_admin_testimonial_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<div class="model_line"></div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Avatar</th>
          <th>Body</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if @testimonials.present? %>
          <% @testimonials.each do |testimonial| %>
            <tr>
              <td>
                <%= testimonial.name %>
              </td>
              <td>
                <%= image_tag testimonial.avatar, size:"50x50" %>
              </td>
              <td>
                <%= testimonial.body %>
              </td>
              <td>
                <%= link_to (fa_icon "edit").html_safe,edit_admin_testimonial_path(testimonial.id),{title:'Edit',class: 'btn-sm btn-primary'} %>
                <%= link_to (fa_icon "trash").html_safe,admin_testimonial_path(testimonial),{title:'Delete',class: 'btn-sm btn-danger',method: :delete,data: {confirm: "Are you sure you want to delete this?"}} %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td class="center" colspan="6">No Record Found</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
