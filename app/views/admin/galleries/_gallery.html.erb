<table class="table table-hover">
  <thead>
    <tr>
      <th>File</th>
      <th>Show At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @galleries.gallery.present? %>  
      <% @galleries.gallery.each do |gallery| %>
        <tr>
          <td>
            <%= image_tag gallery.file, size:"50x50" %>
          </td>
          <td>
            <%= gallery.show_at %>
          </td>
          <td class="align_right">
            <% if !gallery.status %>
              <%= link_to "Publish",publish_admin_gallery_path(gallery.id),{title: 'Publish',class: 'btn-sm btn-success'} %>
            <% else %>
              <%= link_to "Unpublish",unpublish_admin_gallery_path(gallery.id),{title: 'Unublish',class: 'btn-sm btn-danger'} %>
            <% end %>
            <%= link_to (fa_icon "edit").html_safe,edit_admin_gallery_path(gallery.id),{title:'Edit',class: 'btn-sm btn-primary'} %>
            <%= link_to (fa_icon "trash").html_safe,admin_gallery_path(gallery),{title:'Delete',class: 'btn-sm btn-danger',method: :delete,data: {confirm: "Are you sure you want to delete this?"}} %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td class="center" colspan="6">No Record Found</td>
      </tr>
    <% end %>
  </tbody>
</table>