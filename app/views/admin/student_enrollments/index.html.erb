<div class="row">
  <div class="col-md-12">
    <div class="col-md-6">
      <h2>Student Enrollments</h2>
    </div>
    <div class="col-md-6">
      <div class="model_buttons">
        
      </div>
    </div>
  </div>
</div>
<div class="model_line"></div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Mobile</th>
          <th>Course</th>
          <th>State</th>
          <th>Preferred Center</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if @students.present? %>
          <% @students.each do |student| %>
            <tr>
              <td>
                <%= student.name %>
              </td>
              <td>
                <%= student.email %>
              </td>
              <td>
                <%= student.mobile %>
              </td>
              <td>
                <%= student.course %>
              </td>
              <td>
                <%= student.state %>
              </td>
              <td>
                <%= student.preferred_center %>
              </td>
              <td>
                <%= link_to (fa_icon "eye").html_safe,admin_student_enrollment_path(student.id),{title:'Edit',class: 'btn-sm btn-primary'} %>
                <%= link_to (fa_icon "trash").html_safe,admin_student_enrollment_path(student),{title:'Delete',class: 'btn-sm btn-danger',method: :delete,data: {confirm: "Are you sure you want to delete this?"}} %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td class="center" colspan="6">No Record Found</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
